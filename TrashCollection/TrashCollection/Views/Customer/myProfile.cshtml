@{@model TrashCollection.ViewModels.CustomerProfileViewModel
    Layout = "~/Views/Shared/CustomerLayout.cshtml";
    ViewBag.Title = Profile;
}

<h2>User Profile</h2>

<form>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        

            <label>Full Name</label>
            @Html.EditorFor(model => model.customer.fullName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer.fullName, "", new { @class = "text-danger" })
        
    </div>

    <div class="form-group">
            <label>Nick Name</label>
            @Html.EditorFor(model => model.customer.nickName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.customer.nickName, "", new { @class = "text-danger" })
    
    </div>

    <hr />
    <h2>Address</h2>
    <hr />
    <div class="form-group">
            <label>Street Address</label>
            @Html.EditorFor(model => model.addresses.street_address_line1, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.addresses.street_address_line1, "", new { @class = "text-danger" })
        </div>
   <div class="form-group">
       <label>Line 2</label>
       @Html.EditorFor(model => model.addresses.street_address_line2, new { htmlAttributes = new { @class = "form-control" } })
       @Html.ValidationMessageFor(model => model.addresses.street_address_line2, "", new { @class = "text-danger" })
   </div>
    <div class="form-group">
        <label>State</label>
        @Html.EditorFor(model => model.addresses.street_address_line2, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.addresses.street_address_line2, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Zip Code</label>
        @Html.EditorFor(model => model.addresses.street_address_line2, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.addresses.street_address_line2, "", new { @class = "text-danger" })
    </div>
</form>
<input type="submit" value="Submit" />